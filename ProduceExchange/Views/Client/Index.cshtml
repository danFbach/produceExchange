@model IEnumerable<ProduceExchange.Models.ClientModels>

@{
    ViewBag.Title = "Clients";
}

<h2 style="margin-left:15px;">@ViewBag.Title</h2>
<h5 style="margin-left:25px;">View / Edit</h5>

<p>
    <h6 style="text-align:right; padding-right:15px;">@Html.ActionLink("Create New", "Create") | @Html.ActionLink("Return to Inventory Home", "Home", "Inventory")</h6>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.clientFName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.clientLName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.businessName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.clientPhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.clientEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.moneySpent)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.clientFName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.clientLName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.businessName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.clientPhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.clientEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.moneySpent)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
