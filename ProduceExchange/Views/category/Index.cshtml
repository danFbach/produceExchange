@using ProduceExchange.Models
@model IEnumerable<ProduceExchange.Models.categoryModels>

@{
    ViewBag.Title = "Product Categories";
    ApplicationDbContext db = new ApplicationDbContext();
}

<h2 style="margin-left:15px;">@ViewBag.Title</h2>
<h5 style="margin-left:25px;">View / Edit</h5>

<p>
    <h6 style="text-align:right; padding-right:15px;">@Html.ActionLink("Create New", "Create") | @Html.ActionLink("Return to Inventory Home", "Home", "Inventory")</h6>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.productType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.categoryType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.categoryDiscription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    var type = db.productTypeData.Find(item.productType).setProductTypes;
    <tr>
        <td>
            @Html.DisplayFor(modelItem => type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.categoryType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.categoryDiscription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
